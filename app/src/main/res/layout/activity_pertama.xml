<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/matkula"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textHalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toStartOf="@+id/textKabar"
        app:layout_constraintStart_toStartOf="@+id/textKabar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textKabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="28dp"
        android:text="Bagaimana Kabarmu Hari Ini?"
        app:layout_constraintBottom_toTopOf="@+id/inputKabar"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/inputKabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="38dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/reaksiKabar"
        app:layout_constraintEnd_toStartOf="@+id/enterKabar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/reaksiKabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/pilih"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="218dp"
        android:layout_marginBottom="217dp"
        android:text="Pilih Mata Kuliah"
        app:layout_constraintBottom_toTopOf="@+id/matkulDua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textHalo" />

    <TextView
        android:id="@+id/infoMKsatu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="232dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/matkulSatu"
        app:layout_constraintTop_toTopOf="@+id/matkulSatu" />

    <TextView
        android:id="@+id/infoMKdua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="232dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/matkulDua"
        app:layout_constraintTop_toTopOf="@+id/matkulDua" />

    <ImageButton
        android:id="@+id/matkulSatu"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/matkulDua"
        app:layout_constraintEnd_toStartOf="@+id/infoMKsatu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pilih"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/matkulDua"
        android:layout_width="0dp"
        android:layout_height="102dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/namaMK2"
        app:layout_constraintEnd_toStartOf="@+id/infoMKdua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/namaMK1"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/namaMK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="254dp"
        android:text="Pemrograman Mobile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/namaMK2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="75dp"
        android:text="Logika Fuzzy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/enterKabar"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:text="Kirim"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputKabar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inputKabar" />
</androidx.constraintlayout.widget.ConstraintLayout>